{
  "id": "blog_post",
  "label": "Blog Post",
  "format": "page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": { "config": { "label": "UID" }, "type": "UID" },
      "title": {
        "type": "Text",
        "config": { "label": "Title", "placeholder": "" }
      },
      "short_title": {
        "type": "Text",
        "config": { "label": "Short Title", "placeholder": "" }
      },
      "author": {
        "type": "Link",
        "config": {
          "label": "Author",
          "select": "document",
          "customtypes": ["author"]
        }
      },
      "cover_image": {
        "type": "Image",
        "config": { "label": "Cover Image", "constraint": {}, "thumbnails": [] }
      },
      "categories": {
        "type": "Group",
        "config": {
          "label": "Categories",
          "fields": {
            "category": {
              "type": "Link",
              "config": {
                "label": "Category",
                "select": "document",
                "customtypes": ["blog_category"]
              }
            }
          }
        }
      },
      "content": {
        "type": "StructuredText",
        "config": {
          "label": "Content",
          "placeholder": "",
          "allowTargetBlank": true,
          "multi": "paragraph,preformatted,heading2,heading3,heading4,heading5,heading6,strong,em,hyperlink,image,embed,list-item,o-list-item,rtl"
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": { "choices": {} }
      }
    },
    "SEO & Metadata": {
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      },
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_keywords": {
        "type": "Text",
        "config": { "label": "Meta Keywords", "placeholder": "" }
      },
      "meta_image": {
        "config": {
          "constraint": { "height": 1260, "width": 2400 },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      }
    }
  }
}
